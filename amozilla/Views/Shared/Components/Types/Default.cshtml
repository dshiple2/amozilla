@{
}
@model IEnumerable<string>
<a asp-controller="Home" asp-action="Index" asp-route-bookGenre="" asp-route-pageNum ="1" class="btn btn-block btn-outline-secondary">Home</a>

@foreach(string t in Model)
{
    <a asp-controller="Home" asp-action="Index" asp-route-bookGenre="@t" asp-route-pageNum ="1"
       class="@(ViewBag.SelectedType == t ? "btn btn-block btn-primary" : " btn btn-block btn-outline-secondary")">@t</a>
        
}
